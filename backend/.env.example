APP_NAME=postresval-backend
# IMPORTANTE: Generar una clave secreta fuerte de al menos 32 caracteres
# Puedes usar: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_MINIMUM_32_CHARACTERS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS - Dominios permitidos (separados por coma, sin espacios después)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

DB_HOST=mysql
DB_PORT=3306
DB_USER=postres
DB_PASSWORD=postres_password
DB_NAME=postresdb

# Google OAuth 2.0 - Requerido para autenticación con Google
# Dejar vacío ("") si no está configurado
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

SERVER_HOST=0.0.0.0
SERVER_PORT=8000
